{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block description %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block body %}
    <nav class="navbar navbar-default" id="main_nav">
        <div class="container">
            <div class="navbar-header">
                <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse"
                        class="navbar-toggle collapsed" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path(app.request.locale ~ '_homepage') }}" class="navbar-brand">
                    logo
                </a>
            </div>
            <div class="navbar-collapse collapse navbar-right" id="navbar">
                {{ render(controller('AppBundle:Default:menu', {'route':app.request.get('_route')} )) }}
            </div>
        </div>
    </nav>

    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div>{{ app.user.username }} |
                <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
            </div>
            <div>
                <a href="{{ path( app.request.locale ~ '_analyses') }}">{{ 'menu.user.analyses'|trans }}</a>
            </div>
        {% else %}
            <a href="{{ path(app.request.locale ~ '_fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
    </div>


    {{ render(controller('AppBundle:Default:langSwitches', {'route':app.request.get('_route'), 'params': app.request.get('_route_params') } )) }}
    <div class="container-fluid">
        {% block content %}{% endblock %}

    </div>
{% endblock %}