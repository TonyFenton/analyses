{% extends 'default/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('style/default/contact.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-xs-12">
            <div id="contact-header" class="jumbotron">
                {% include "_page_content.html.twig" %}
            </div>
        </div>
        <div class="col-sm-10 col-sm-offset-1 col-xs-12">
            <div id="contact-body" class="jumbotron">
                {% include "_flash_messages.html.twig" %}

                {% form_theme form 'bootstrap_3_layout.html.twig' %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}