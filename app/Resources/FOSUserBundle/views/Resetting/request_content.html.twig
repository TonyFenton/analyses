{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path(app.request.locale ~ '_fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="form-group">
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="username" required="required"/>
    </div>
    <div class="form-group">
        <input class="btn btn-success form-control" type="submit" value="{{ 'resetting.request.submit'|trans }}"/>
    </div>
</form>