{#{% trans_default_domain 'FOSUserBundle' %}#}

{% if error %}
    <div class="alert alert-dismissable alert-danger">
        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
               class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"/>
    </div>
    <div class="form-group">
        <input type="password" id="password" name="_password" required="required" class="form-control"
               placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"/>
    </div>
    <div class="checkbox">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
    </div>
    <input type="submit" id="_submit" class="btn btn-success form-control" name="_submit"
           value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
    <ul class="links">
        <li>
            <a href="{{ path(app.request.locale ~ '_fos_user_resetting_request') }}"
               class="">{{ 'fosuser.reset_password'|trans }}</a>
        </li>
        <li>
            <a href="{{ path(app.request.locale ~ '_fos_user_registration_register') }}"
               class="">{{ 'fosuser.register'|trans }}</a>
        </li>
    </ul>
</form>