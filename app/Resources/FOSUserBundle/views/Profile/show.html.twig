{% extends 'default/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('style/user/user.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2 jumbotron">
            <h1>{{ 'fosuser.profile_show'|trans }}</h1>
            {% include "_flash_messages.html.twig" %}
            <div>
                {% include "@FOSUser/Profile/show_content.html.twig" %}
            </div>
            <div class="btn-group">
                <a class="btn btn-default" href="{{ path(app.request.locale ~ '_fos_user_profile_edit') }}"
                   role="button">{{ 'fosuser.profile_edit'|trans }}</a>
                <a class="btn btn-default" href="{{ path(app.request.locale ~ '_fos_user_change_password') }}"
                   role="button">{{ 'fosuser.change_password'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock content %}
